.conteiner
  = render "side_bar"
  .content
    %section.chapter-container
      %h2.head クレジットカード情報入力
      .add-card
        = form_tag(credit_cards_path, method: :post, id: "charge-form", class: "details", name: "inputForm") do
          .add-card
            .add-card__number-details
              .add-card__number-details__card-number カード番号
              %span.add-card__number-details__must-check 必須
            .add-card__number
              = text_field_tag 'payment_card_no', "", class: 'add-card__number__cardnumber', id: "payment_card_no", placeholder: '半角数字のみ', type: "text", maxlength: "16"
            .image
              = image_tag(image_path('cards/visa.svg'), class: 'visa', size: "49x20")
              = image_tag(image_path('cards/master.svg'), class: 'master', size: "49x20")
              = image_tag(image_path('cards/jcb.svg'), class: 'jcb', size: "49x20")
              = image_tag(image_path('cards/amex.svg'), class: 'amex', size: "49x20")
              = image_tag(image_path('cards/diners.svg'), class: 'diners', size: "49x20")
              = image_tag(image_path('cards/discover.svg'), class: 'discover', size: "49x20")
            .add-card__expirationdate
              .add-card__expirationdate__details
                .add-card__expirationdate__details__date 有効期限
                %span.add-card__expirationdate__details__must-check 必須
              .add-card__expirationdate__choice
                .add-card__expirationdate__choice__month
                  %select#payment_card_month.card-default{name: "payment_card_month", type: "text"}
                    %option{value: "1"} 01
                    %option{value: "2"} 02
                    %option{value: "3"} 03
                    %option{value: "4"} 04
                    %option{value: "5"} 05
                    %option{value: "6"} 06
                    %option{value: "7"} 07
                    %option{value: "8"} 08
                    %option{value: "9"} 09
                    %option{value: "10"} 10
                    %option{value: "11"} 11
                    %option{value: "12"} 12
                  .month-details 月
                .add-card__expirationdate__choice__year
                  %select#payment_card_year.card-default{name: "payment_card_year", type: "text"}
                    %option{value: "2020"} 20
                    %option{value: "2021"} 21
                    %option{value: "2022"} 22
                    %option{value: "2023"} 23
                    %option{value: "2024"} 24
                    %option{value: "2025"} 25
                    %option{value: "2026"} 26
                    %option{value: "2027"} 27
                    %option{value: "2028"} 28
                    %option{value: "2029"} 29
                    %option{value: "2030"} 30
                  .year-details 年
            .add-card__securitycode
              .add-card__securitycode__details
                .add-card__securitycode__details__title セキュリティコード
                %span.must_check 必須
              .add-card__securitycode__cardsecurity
                = text_field_tag  "payment_card_cvc", "", type: 'text', class: 'add-card__securitycode__cardsecurity__form', id: "payment_card_cvc", maxlength: "4", placeholder: 'カード背面4桁もしくは3桁の番号'
              .add-card__securitycode__card-question カード裏面の番号とは？
            .add 
              = submit_tag "登録する", class: "add__btn", id: "payment_card_submit-button" 

